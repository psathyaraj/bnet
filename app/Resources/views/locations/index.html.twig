{% extends 'base.html.twig' %}

{% block body %}
    <h1>Locations list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td><a href="{{ path('locations_show', { 'id': location.id }) }}">{{ location.id }}</a></td>
                <td>{{ location.latitude }}</td>
                <td>{{ location.longitude }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('locations_show', { 'id': location.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('locations_edit', { 'id': location.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('locations_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
