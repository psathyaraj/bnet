{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Dob</th>
                <th>Gender</th>
                <th>Phno</th>
                <th>Email</th>
                <th>Device_token</th>
                <th>Bloodgroup</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('users_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.name }}</td>
                <td>{% if user.dob %}{{ user.dob|date('Y-m-d') }}{% endif %}</td>
                <td>{% if user.gender %}Yes{% else %}No{% endif %}</td>
                <td>{{ user.phno }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.devicetoken }}</td>
                <td>{{ user.bloodGroup }}</td>
                <td>{{ user.status }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('users_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('users_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('users_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
