{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hospitals list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phno</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hospital in hospitals %}
            <tr>
                <td><a href="{{ path('hospitals_show', { 'id': hospital.id }) }}">{{ hospital.id }}</a></td>
                <td>{{ hospital.name }}</td>
                <td>{{ hospital.phno }}</td>
                <td>{{ hospital.latitude }}</td>
                <td>{{ hospital.longitude }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('hospitals_show', { 'id': hospital.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('hospitals_edit', { 'id': hospital.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('hospitals_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
