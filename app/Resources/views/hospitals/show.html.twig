{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hospitals</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hospital.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hospital.name }}</td>
            </tr>
            <tr>
                <th>Phno</th>
                <td>{{ hospital.phno }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ hospital.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ hospital.longitude }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('hospitals_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('hospitals_edit', { 'id': hospital.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
