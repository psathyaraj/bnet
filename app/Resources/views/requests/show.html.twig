{% extends 'base.html.twig' %}

{% block body %}
    <h1>Requests</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ request.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ request.type }}</td>
            </tr>
            <tr>
                <th>Qty</th>
                <td>{{ request.qty }}</td>
            </tr>
            <tr>
                <th>Patientname</th>
                <td>{{ request.patientName }}</td>
            </tr>
            <tr>
                <th>Withinhours</th>
                <td>{{ request.withinHours }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ request.status }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if request.createdAt %}{{ request.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if request.updatedAt %}{{ request.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('requests_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('requests_edit', { 'id': request.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
