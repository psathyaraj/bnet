{% extends 'base.html.twig' %}

{% block body %}
    <h1>LastDonations list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Donationdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lastDonation in lastDonations %}
            <tr>
                <td><a href="{{ path('lastdonations_show', { 'id': lastDonation.id }) }}">{{ lastDonation.id }}</a></td>
                <td>{{ lastDonation.type }}</td>
                <td>{% if lastDonation.donationDate %}{{ lastDonation.donationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('lastdonations_show', { 'id': lastDonation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('lastdonations_edit', { 'id': lastDonation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lastdonations_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
