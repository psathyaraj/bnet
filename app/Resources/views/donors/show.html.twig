{% extends 'base.html.twig' %}

{% block body %}
    <h1>Donors</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ donor.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ donor.status }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if donor.createdAt %}{{ donor.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if donor.updatedAt %}{{ donor.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('donors_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('donors_edit', { 'id': donor.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
